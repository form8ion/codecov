{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>form8ion/renovate-config:js-package"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update action versions in scaffolded workflow",
      "managerFilePatterns": [
        "/^src/reporter/ci-providers/github-workflows/codecov-action.+\\.js$/"
      ],
      "matchStrings": [
        "uses: '.*@(?<currentValue>.*?)'"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "codecov/codecov-action"
    }
  ],
  "packageRules": [
    {
      "semanticCommitType": "fix",
      "matchManagers": [
        "custom.regex"
      ],
      "matchDepTypes": [
        "github-actions"
      ]
    }
  ]
}
